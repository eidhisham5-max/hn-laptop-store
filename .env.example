# H.N Laptop Store - Environment Variables
# Copy this file to .env.local and fill in your values

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="H.N Laptop Store"

# Database Configuration (Optional - for future database integration)
DATABASE_URL=your_database_connection_string

# Admin Configuration
ADMIN_EMAIL=admin@hnlaptopstore.com
ADMIN_PASSWORD=your_secure_admin_password

# API Keys (Optional - for future integrations)
# Payment Gateway
PAYMENT_API_KEY=your_payment_api_key
PAYMENT_SECRET_KEY=your_payment_secret_key

# Email Service
EMAIL_SERVICE_API_KEY=your_email_service_api_key
EMAIL_FROM=noreply@hnlaptopstore.com

# Storage Configuration
NEXT_PUBLIC_STORAGE_BUCKET=product-images

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id

# Social Media Integration (Optional)
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id

# Security
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false
NEXT_PUBLIC_ENABLE_PAYMENT=false