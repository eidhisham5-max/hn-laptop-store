# Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/hn_laptop_store"

# Authentication
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Payment Gateway
STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"

# Email Service
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# File Upload
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Analytics
GOOGLE_ANALYTICS_ID="GA_MEASUREMENT_ID"

# Social Media
FACEBOOK_APP_ID="your-facebook-app-id"
GOOGLE_CLIENT_ID="your-google-client-id"

# Admin
ADMIN_EMAIL="admin@hnlaptopstore.com"
ADMIN_PASSWORD="secure-admin-password"

# Store Settings
STORE_NAME="H.N Laptop Store"
STORE_EMAIL="info@hnlaptopstore.com"
STORE_PHONE="+966501234567"
STORE_ADDRESS="الرياض، المملكة العربية السعودية"

# Shipping
FREE_SHIPPING_THRESHOLD="500"
SHIPPING_RATE="50"

# Currency
CURRENCY="SAR"
CURRENCY_SYMBOL="ريال"